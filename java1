				System.out.println("Stworzono wiecej niz 10 pracownikow, dodawanie zablokowane");
				return null;
			}
		}
					


	public Pracownik(int id, String imie, int pensja, boolean urlop){

		this.Nr_pracownika = Nr_pracownika;
		this.imie = imie;
		this.pensja = pensja;
		this.urlop = urlop;
	}
	
