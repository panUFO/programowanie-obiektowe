///dopisac metode ktora odczytuje z pliku pracownikow i dopisuje ich do aktualnej bazy




	public static void wczytajPracownikow() throws FileNotFoundException
	{
		int id;
		int idPracownika;
		String imie;
		int pensja;
		boolean urlop;
		
		String nazwaPliku = wpiszNazwePliku();
		
		usunPracownikow();
		
		File plik = new File(nazwaPliku);
		Scanner danePlik = new Scanner(plik);
		
		for(id=0; danePlik.hasNext(); id++){

			idPracownika = danePlik.nextInt();
			imie = danePlik.next();
			pensja = danePlik.nextInt();
			urlop = urlopStringNaBoolean(danePlik.next());
			
			pracownik[id] = new Pracownik(idPracownika, imie, pensja, urlop);
		}
		
		danePlik.close();
		ilosc_pracownikow = id;
	}










	
		








